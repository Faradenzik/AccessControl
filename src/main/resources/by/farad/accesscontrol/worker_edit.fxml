<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="by.farad.accesscontrol.controllers.WorkerEditController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Редактирование сотрудника" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Фамилия:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="surnameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Отчество:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="patronomicField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Пол:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="sexComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Дата рождения:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="birthdayPicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Телефон:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Должность:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="positionField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Отдел:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="otdelField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <Label text="Департамент:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <TextField fx:id="departmentField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="deleteButton" text="Удалить" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Отмена"/>
        <Button fx:id="saveButton" text="Сохранить" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>