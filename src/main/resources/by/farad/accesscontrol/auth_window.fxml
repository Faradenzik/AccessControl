<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="root" alignment="TOP_CENTER" prefHeight="390.0" prefWidth="800.0" style="-fx-background-color: #2A363B;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="by.farad.accesscontrol.controllers.AuthController">
   <Label alignment="TOP_CENTER" contentDisplay="TOP" text="Добро пожаловать" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="JejuGothic" size="42.0"/>
      </font>
      <VBox.margin>
         <Insets bottom="45.0" top="20.0"/>
      </VBox.margin>
   </Label>
   <VBox alignment="TOP_CENTER" prefHeight="104.0" prefWidth="600.0">
      <TextField fx:id="loginField" maxHeight="0.0" maxWidth="0.0" minHeight="-Infinity" minWidth="-Infinity"
                 prefHeight="45.0" prefWidth="240.0" promptText="Логин"
                 style="-fx-promt-text-fill: #FFFFFF; -fx-background-color: #D9D9D9; -fx-background-radius: 20;">
         <font>
            <Font name="JejuGothic" size="16.0"/>
         </font>
         <VBox.margin>
            <Insets/>
         </VBox.margin>
         <padding>
            <Insets left="15.0"/>
         </padding>
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
      </TextField>
      <PasswordField fx:id="passwordField" maxHeight="0.0" maxWidth="0.0" minHeight="-Infinity" minWidth="-Infinity"
                     prefHeight="45.0" prefWidth="240.0" promptText="Пароль"
                     style="-fx-background-color: #D9D9D9; -fx-background-radius: 20;">
         <font>
            <Font name="JejuGothic" size="16.0"/>
         </font>
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <padding>
            <Insets left="15.0"/>
         </padding>
      </PasswordField>
   </VBox>
   <Button fx:id="authButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0"
           prefWidth="240.0" style="-fx-background-radius: 20; -fx-background-color: #E8415F;" text="Авторизация"
           textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="JejuGothic" size="22.0"/>
      </font>
      <VBox.margin>
         <Insets top="40.0"/>
      </VBox.margin>
   </Button>
</VBox>
