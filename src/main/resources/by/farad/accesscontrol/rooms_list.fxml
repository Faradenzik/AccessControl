<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.farad.accesscontrol.controllers.RoomsListController">
   <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <center>
         <TableView fx:id="roomsTable">
            <columns>
               <TableColumn fx:id="floor" editable="false" minWidth="50.0" prefWidth="75.0" text="Этаж" />
               <TableColumn fx:id="name" editable="false" minWidth="100.0" prefWidth="108.0" text="Название" />
               <TableColumn fx:id="deviceId" editable="false" minWidth="100.0" prefWidth="139.0" sortable="false" text="ИД Считывателя" />
            </columns>
            <BorderPane.margin>
               <Insets bottom="100.0" left="300.0" right="300.0" top="100.0" />
            </BorderPane.margin>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </center>
      <right>
         <ListView fx:id="workersList" BorderPane.alignment="CENTER" />
      </right>
   </BorderPane>
</AnchorPane>
