<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="by.farad.accesscontrol.controllers.WorkersListController">
    <BorderPane style="-fx-background-color: #2A363B;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <left>
            <TreeView fx:id="treeView" prefHeight="900.0" prefWidth="237.0" style="-fx-background-color: #fecea8;"
                      BorderPane.alignment="TOP_LEFT"/>
        </left>
        <right>
            <VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="289.0" style="-fx-background-color: #fecea8;"
                  BorderPane.alignment="TOP_RIGHT"/>
        </right>
        <center>
            <TableView fx:id="workersTable" style="-fx-background-color: #2A363B;" tableMenuButtonVisible="true"
                       BorderPane.alignment="TOP_CENTER">
                <columns>
                    <TableColumn fx:id="id" maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="60.0"
                                 text="ID"/>
                    <TableColumn fx:id="name" maxWidth="1.7976931348623157E308" minWidth="90.0" prefWidth="100.0"
                                 text="Имя"/>
                    <TableColumn fx:id="surname" maxWidth="1.7976931348623157E308" minWidth="90.0" prefWidth="100.0"
                                 text="Фамилия"/>
                    <TableColumn fx:id="patronymic" maxWidth="1.7976931348623157E308" minWidth="90.0" prefWidth="100.0"
                                 text="Отчество"/>
                    <TableColumn fx:id="sex" maxWidth="1.7976931348623157E308" minWidth="60.0" prefWidth="70.0"
                                 text="Пол"/>
                    <TableColumn fx:id="birthday" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="120.0"
                                 text="Дата рождения"/>
                    <TableColumn fx:id="phone" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="130.0"
                                 text="Телефон"/>
                    <TableColumn fx:id="position" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="130.0"
                                 text="Должность"/>
                    <TableColumn fx:id="otdel" maxWidth="1.7976931348623157E308" minWidth="140.0" prefWidth="150.0"
                                 text="Отдел"/>
                    <TableColumn fx:id="department" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="130.0"
                                 text="Департамент"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </center>
    </BorderPane>
</AnchorPane>
