<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.farad.accesscontrol.controllers.rooms.RoomsListController">
   <BorderPane stylesheets="@../styles.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <top>
          <HBox alignment="CENTER_LEFT" prefHeight="50.0" BorderPane.alignment="CENTER_LEFT">
              <BorderPane.margin>
                  <Insets left="50.0" />
              </BorderPane.margin>
              <Button mnemonicParsing="false" onAction="#addRoom" text="Добавить помещение" HBox.hgrow="ALWAYS" />
          </HBox>
      </top>
      <center>
         <TreeView fx:id="roomsTree" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
      </center>
   </BorderPane>
</AnchorPane>
